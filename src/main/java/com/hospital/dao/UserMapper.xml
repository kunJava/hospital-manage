<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.hospital.dao.UserMapper">
    <resultMap id="BaseResultMap" type="com.hospital.model.User">
        <id column="ACCOUNT" property="account" jdbcType="VARCHAR"/>
        <id column="USER_NAME" property="userName" jdbcType="VARCHAR"/>
        <id column="PASSWORD" property="password" jdbcType="VARCHAR"/>
    </resultMap>
    <select id="getUserByAccount" parameterType="com.hospital.model.User" resultMap="BaseResultMap">
        SELECT * FROM users where ACCOUNT = #{account,jdbcType=VARCHAR} AND STATUS = 1
    </select>
    <insert id="insertUser" parameterType="com.hospital.model.User">
        INSERT into users (ID,USER_NAME,ACCOUNT,PASSWORD,STATUS,CREATE_TIME,UPDATE_TIME,SORT) VALUES
        (#{id,jdbcType=VARCHAR},#{userName,jdbcType=VARCHAR},#{account,jdbcType=VARCHAR},#{password,jdbcType=VARCHAR},#{status,jdbcType=VARCHAR},
         #{createTime,jdbcType=VARCHAR},#{updateTime,jdbcType=VARCHAR},#{sort,jdbcType=VARCHAR})
    </insert>

    <insert id="insertUserBalance" parameterType="java.util.Map">
        INTO INTO user_balance (ID,MONEY,USER_ID,CREATE_TIME,UPDATE_TIME,STATUS) VALUES (,'${money}','${userId}','','','')
    </insert>
</mapper>